---
const { img, title } = Astro.props;
---
<header class="hero">
    <img
        width="1600"
        height="1066"
        class="img"
        src={import.meta.env.BASE_URL + img}
        sizes="(max-width: 800px) 800px, (max-width: 1200px) 1200px, (max-width: 1600px) 1600px, (max-width: 2400px) 2400px, 1200px"
    />
    <div class="overlay">
        <h1 class="title">
            {title} 
        </h1>
    </div>
</header>
<style>
.hero {
    position: relative;
    overflow: hidden;
    margin-top: -11em;
	z-index: -1;
}

@media (min-width: 750px) {
    .hero {
        height: 20vw;
    }
}

.img {
    display: block;
    width: 100%;
    height: auto;
}

.overlay {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    z-index: 10;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    padding-left: 2rem;
}

@media (min-width: 750px) {
    .overlay {
        padding-left: 4rem;
    }
}

.title {
    font-family: 'Roboto';
    font-weight: 400;
    font-size: var(--f-u4);
    color: white;
    margin-bottom: 0.5rem;
    margin-top: 0;
}

@media (min-width: 750px) {
    .title {
        font-size: var(--f-u9);
    }
}

@media only screen and (max-width:700px) {
    .title {
        margin-top: 100px;
        font-size: var(--f-u2);
    }
}

</style>
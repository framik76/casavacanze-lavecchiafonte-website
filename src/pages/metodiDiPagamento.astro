---
import MainHead from '../components/MainHead.astro';
import Footer from '../components/Footer.astro';
import Header from '../components/Header.astro';
import Nav from '../components/Nav.astro';
---

<html lang="en">
	<head>
		<MainHead title="Metodi di pagamento | Casa Vacanze La Vecchia Fonte" description="Metodi di pagamento Casa Vacanze La Vecchia Fonte" />
		<style>
			.heroImg {
				max-height: 24rem;
				object-fit: cover;
				overflow: hidden;
			}

			.heroImg img {
				width: 100%;
			}

			.bio {
				font-size: var(--f-u1);
				line-height: 2;
				margin-top: 4em;
			}

			.wrapper.bio {
				max-width: 50em;
			}
			table {
				border: 1px solid;
			}
			table td {
				border: 1px solid;
			}
		</style>
	</head>
	<body>
		<Nav />
		<Header img="assets/home.jpg" title="Metodi di pagamento" />
		<div class="wrapper">
			<div class="bio wrapper">
				<p>
					Bonifico bancario<br />
					IBAN IT32S0847469571000000003179 
				</p>
				<p>Si accettano pagamenti anche con carta di credito</p>	
			</div>
		</div>
		<Footer />
	</body>
</html>
